<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='res_config_settings_withholding_tax'>
        <field name='name'>res.config.settings.withholding.tax</field>
        <field name='model'>res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='tax_exigibility']/ancestor::div[hasclass('o_setting_box')]" position="before">
                <div class="col-12 col-lg-6 o_setting_box" groups="account.group_account_user">
                    <div class="o_setting_right_pane">
                        <div class="text-muted">
                            withholding tax configuration
                        </div>
                        <label for="withholding_journal_id"/>
                        <field name="withholding_journal_id"/>
                        <label for="withholding_payment_term"/>
                        <field name="withholding_payment_term"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>