<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='account_tax_withholding'>
            <field name='name'>account.tax.withholding.form</field>
            <field name='model'>account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='tax_exigibility']" position="attributes">
                    <attribute name="attrs">
                        {'invisible':[
                                '|', ('amount_type','=', 'group'),
                                '&amp;',
                                ('hide_tax_exigibility', '=', False),
                                ('account_tax_type', '!=', 'withholding_tax'),
                        ]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='cash_basis_base_account_id']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [
                            '|',
                            ('tax_exigibility', '=', 'on_invoice'),
                            ('account_tax_type', '!=', 'vat_tax')
                        ]}
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='cash_basis_base_account_id']" position="after">
                    <field name="withholding_payment_details" attrs="{'invisible': [('account_tax_type','!=','withholding_tax')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>