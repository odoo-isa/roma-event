<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_purchase_order_multiple_discount_form'>
            <field name='name'>view.purchase.order.multiple.discount.form</field>
            <field name='model'>purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='order_line']//tree//field[@name='price_unit']" position="after">
                    <field name="discount" invisible="1"/>
                    <field string="First Discount %" name="discount1" groups="product.group_discount_per_so_line"/>
                    <field string="Second Discount %" name="discount2" groups="product.group_discount_per_so_line"/>
                    <field string="Third Discount %" name="discount3" groups="product.group_discount_per_so_line"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//form//field[@name='price_unit']" position="after">
                    <label for="discount1" groups="product.group_discount_per_so_line"/>
                    <div name="discount1" groups="product.group_discount_per_so_line">
                        <field name="discount1" class="oe_inline"/> %
                    </div>
                    <label for="discount2" groups="product.group_discount_per_so_line"/>
                    <div name="discount2" groups="product.group_discount_per_so_line">
                        <field name="discount2" class="oe_inline"/> %
                    </div>
                    <label for="discount3" groups="product.group_discount_per_so_line"/>
                    <div name="discount3" groups="product.group_discount_per_so_line">
                        <field name="discount3" class="oe_inline"/> %
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>