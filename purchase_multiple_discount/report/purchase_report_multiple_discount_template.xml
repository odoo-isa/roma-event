<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_purchaseorder_multiple_discount" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[5]" position="after">
                <t t-if="any([l.discount1 for l in o.order_line])">
                    <th name="th_discount1" class="text-right" groups="product.group_discount_per_so_line"><span><strong>First Discount</strong></span></th>
                </t>
                <t t-if="any([l.discount2 for l in o.order_line])">
                    <th name="th_discount2" class="text-right" groups="product.group_discount_per_so_line"><span><strong>Second Discount</strong></span></th>
                </t>
                <t t-if="any([l.discount3 for l in o.order_line])">
                    <th name="th_discount3" class="text-right" groups="product.group_discount_per_so_line"><span><strong>Third Discount</strong></span></th>
                </t>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/tbody/t/tr/t/td[5]" position="after">
                <td t-if="line.discount1" class="text-right" groups="product.group_discount_per_so_line">
                    <span t-field="line.discount1"/> %
                </td>
                <td t-if="line.discount2" class="text-right" groups="product.group_discount_per_so_line">
                    <span t-field="line.discount2"/> %
                </td>
                <td t-if="line.discount3" class="text-right" groups="product.group_discount_per_so_line">
                    <span t-field="line.discount3"/> %
                </td>
            </xpath>
        </template>

    </data>
</odoo>