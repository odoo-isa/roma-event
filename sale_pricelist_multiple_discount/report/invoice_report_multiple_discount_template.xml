<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_invoice_multiple_discount" inherit_id="account.report_invoice_document">
            <xpath expr="//table[hasclass('o_main_table')]/thead/tr/th[5]" position="replace">
                <t t-if="any([l.discount1 for l in o.invoice_line_ids])">
                    <th name="th_discount1" class="text-right" groups="product.group_discount_per_so_line">First Discount</th>
                </t>
                <t t-if="any([l.discount2 for l in o.invoice_line_ids])">
                    <th name="th_discount2" class="text-right" groups="product.group_discount_per_so_line">Second Discount</th>
                </t>
                <t t-if="any([l.discount3 for l in o.invoice_line_ids])">
                    <th name="th_discount3" class="text-right" groups="product.group_discount_per_so_line">Third Discount</th>
                </t>
            </xpath>
            <xpath expr="//table[hasclass('o_main_table')]/tbody[hasclass('invoice_tbody')]/t/tr/t/td[4]" position="replace">
                <td t-if="line.discount1" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span t-field="line.discount1"/> %
                </td>
                <td t-if="line.discount2" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span t-field="line.discount2"/> %
                </td>
                <td t-if="line.discount3" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span t-field="line.discount3"/> %
                </td>
            </xpath>
        </template>

    </data>
</odoo>