<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_sale_order_client_purchase_form'>
            <field name='name'>view.sale.order.client.purchase.form</field>
            <field name='model'>sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//page[@name='other_information']" position="after">
                    <field name="client_purchase_order_required_rel" invisible="1"/>
                    <page string="Client purchase order" name="sale_client_purchase_order" attrs="{'invisible': [('client_purchase_order_required_rel', '!=', True)]}">
                        <field name="client_purchase_order_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>