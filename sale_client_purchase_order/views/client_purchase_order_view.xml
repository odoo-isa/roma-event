<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_client_purchase_order_form'>
            <field name='name'>view.client.purchase.order.form</field>
            <field name='model'>client.purchase.order</field>
            <field name='arch' type='xml'>
                <form>
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='date'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE View  -->
        <record model='ir.ui.view' id='view_client_purchase_order_tree'>
            <field name='name'>view.client.purchase.order.tree</field>
            <field name='model'>client.purchase.order</field>
            <field name='arch' type='xml'>
                <tree>
                    <field name='name'/>
                    <field name='date'/>
                </tree>
            </field>
        </record>

    </data>
</odoo>