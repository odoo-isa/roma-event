<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_picking_form_ddt'>
            <field name='name'>view.picking.form.ddt</field>
            <field name='model'>stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="ddt_in" attrs="{'invisible': [('picking_type_code', '!=', 'incoming')]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>