<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='account_group_account_form'>
        <field name='name'>account.group.account.form</field>
        <field name='model'>account.group</field>
        <field name="inherit_id" ref="account.view_account_group_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//group" position="after">
                <group string="Account" name="account">
                    <field name="account_ids" nolabel="1" widget="many2many"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- SEARCH View  -->
    <record model="ir.ui.view" id="account_group_absolute_path_search">
        <field name="name">account.group.absolute.path.search</field>
        <field name="model">account.group</field>
        <field name="inherit_id" ref="account.view_account_group_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="absolute_path_name"/>
            </xpath>
        </field>
    </record>

    <record id="account_accountant.menu_account_group" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user')])]"/>
    </record>

</odoo>