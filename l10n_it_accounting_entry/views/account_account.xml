<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='account_account_entry'>
        <field name='name'>account.account.entry.form</field>
        <field name='model'>account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//label[@for='reconcile']" position="before">
                <field name="managed_by_accounting_entry"/>
            </xpath>
        </field>
    </record>

    <!-- Enable menu for the account.move.line -->
    <record id="account.menu_action_account_moves_all" model="ir.ui.menu">
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_user')])]"/>
    </record>

</odoo>