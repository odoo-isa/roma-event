<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE View  -->
        <record model='ir.ui.view' id='view_bank_paper_tree'>
            <field name='name'>view.bank.paper.tree</field>
            <field name='model'>l10n_it.bank_paper</field>
            <field name='arch' type='xml'>
                <tree string='Bank Paper' create="0">
                    <field name='bank_paper_id'/>
                    <field name='document_reference'/>
                    <field name='document_date'/>
                    <field name='partner_id'/>
                    <field name='partner_bank_id'/>
                    <field name='iban'/>
                    <field name='amount'/>
                    <field name='expiration_date'/>
                </tree>
            </field>
        </record>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_bank_paper_form'>
            <field name='name'>view.bank.paper.form</field>
            <field name='model'>l10n_it.bank_paper</field>
            <field name='arch' type='xml'>
                <form string='Bank Paper'>
                    <sheet>
                        <group>
                            <group>
                                <field name='type' readonly="1"/>
                                <field name='document_reference' readonly="1"/>
                                <field name='bank_paper_id' readonly="1"/>
                                <field name='partner_id' readonly="1"/>
                                <field name='partner_bank_id' readonly="1"/>
                            </group>
                            <group>
                                <field name="acceptance_move_id" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name='iban' readonly="1"/>
                                <field name='amount' readonly="1"/>
                                <field name='document_date' readonly="1"/>
                                <field name='expiration_date' readonly="1"/>
                            </group>
                        </group>
                        <field name="account_move_line_ids" nolabel="1" readonly="1"/>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>