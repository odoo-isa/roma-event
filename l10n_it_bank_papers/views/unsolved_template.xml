<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Template for show ddt invoice errors -->
        <template id="unsolved_template">
            <span><b>Unsolved move</b></span>
            <table class="table">
                <tbody class="table table-borderless table-sm">
                    <tr t-foreach="lines" t-as="line">
                        <td>
                            <t t-esc="line.ref"/>
                        </td>
                        <td class="text-right">
                            <t t-esc="line.balance" t-options='{"widget": "monetary", "display_currency": line.move_id.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </template>

    </data>
</odoo>