<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='purchase_order_form_purchase_stock_extension_isa' model='ir.ui.view'>
        <field name='name'>purchase.order.form.purchase.stock.extension.isa</field>
        <field name='model'>purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='order_line']/form//field[@name='taxes_id']" position="after">
                <field name="stock_quantity_sale_info" attrs="{'invisible': [('stock_quantity_sale_info', '=', [])]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field string="Sale Quantity Owner" name="stock_quantity_sale_info_tree"/>
            </xpath>
        </field>
    </record>

</odoo>