<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_res_config_settings_pricelist_form'>
            <field name='name'>view.res.config.settings.pricelist.form</field>
            <field name='model'>res.config.settings</field>
            <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
            <field name='arch' type='xml'>
                <xpath expr="//div[@name='purchase_setting_container']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" title="">
                        <div class="o_setting_left_pane">
                            <field name="update_sale_pricelist"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="update_sale_pricelist"/>
                            <div class="text-muted">
                                Manage sale pricelist
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>