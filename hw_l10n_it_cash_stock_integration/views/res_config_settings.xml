<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='res_config_settings_sale_cash_register_form'>
            <field name='name'>res.config.settings.sale.cash.register.form</field>
            <field name='model'>res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='use_quotation_validity_days']/ancestor::div[hasclass('o_setting_box')]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="cash_register_sale_force">
                        <div class="o_setting_left_pane">
                            <field name="cash_register_force_reserve"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="cash_register_force_reserve"/>
                            <div class="text-muted">
                                Force goods availability when perform counter sale
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

</odoo>