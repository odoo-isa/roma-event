<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='l10n_it_ddt_sale_create_form'>
        <field name='name'>l10n.it.ddt.sale.create.form</field>
        <field name='model'>create.ddt.from.sale.wizard</field>
        <field name='arch' type='xml'>
            <form string='Select Options'>
                <sheet>
                    <group>
                        <group>
                            <field name='select_options' widget="radio"/>
                            <field name='available_ddt' invisible="1"/>
                            <field name="ddt_id"
                                   attrs="{
                                        'invisible':[('select_options', '!=', 'add_to_existing_ddt')],
                                        'required': [('select_options', '=', 'add_to_existing_ddt')],
                                   }"
                                   domain="[('id', 'in', available_ddt),('state','!=','invoiced')]"
                                   options="{'no_create_edit': True, 'no_create': True}"
                            />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="create" name="create_ddt" type="object"
                        class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="create_ddt_sale_wizard_action">
        <field name="name">Create DdT</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.ddt.from.sale.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>