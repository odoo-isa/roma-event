<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_normal_form_view_readonly" model="ir.ui.view">
        <field name="name">product.normal.form.readonly</field>
        <field name="model">product.product</field>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_normal_form_view_edit" model="ir.ui.view">
        <field name="name">product.template.product.form.edit</field>
        <field name="model">product.product</field>
        <field name="groups_id" eval="[(6, 0, [ref('base.group_system')])]"/>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="readonly">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>