<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='account_account_section_report'>
        <field name='name'>account.account.section.report.form</field>
        <field name='model'>account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//group" position="after">
                <notebook>
                    <page string="Financial Reports" name="financial_reports">
                        <field name="html_report_line_section_ids" nolabel="1" options="{'no_create': True}"
                               domain="[('filter_mode', '=', 'account')]"
                               context="{
                                'tree_view_ref': 'account_reports_extension_isa.account_financial_report_line_filter_mode_tree',
                                'search_view_ref': 'account_reports_extension_isa.account_financial_report_line_filter_mode_search',
                                'search_default_group_report_name': 1,
                                'search_default_group_path_name': 1,
                               }"
                        >
                                <tree>
                                    <field name="report_name"/>
                                    <field name="complete_name"/>
                                    <field name="code"/>
                                </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>