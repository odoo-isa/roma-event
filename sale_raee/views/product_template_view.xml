<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_product_template_raee_form'>
            <field name='name'>view.product.template.raee.form</field>
            <field name='model'>product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="is_applicable_waste_cost"/>
                    <field name="waste_cost_amount" attrs="{'invisible': [('is_applicable_waste_cost', '!=', True)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>