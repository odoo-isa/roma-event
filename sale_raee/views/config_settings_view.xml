<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_config_settings_form'>
            <field name='name'>view.config.settings.form</field>
            <field name='model'>res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='group_auto_done_setting']/parent::div/parent::div" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="waste_cost_id"/>
                            <field name="waste_cost_id" domain="[('type', '=', 'service')]"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>