<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit.purchases.team</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='property_supplier_payment_term_id']" position="after">
                    <field name="edit_purchase_user_id" invisible="1"/>
                    <field name="purchase_user_id"
                           invisible="context.get('res_partner_search_mode') != 'supplier'"
                           attrs="{'readonly': [('edit_purchase_user_id', '!=', True)]}"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>