<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='shipping_info_stock_integration_view_form'>
        <field name='name'>shipping.info.stock.integration.view.form</field>
        <field name='model'>stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='move_type']" position="after">
                <field name="incoterm_id"/>
                <field name="goods_description_id"/>
                <field name="transportation_reason_id"/>
                <field name="transportation_method_id"/>
                <field name="parcels"/>
            </xpath>
        </field>
    </record>

</odoo>