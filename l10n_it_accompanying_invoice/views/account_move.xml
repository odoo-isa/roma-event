<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">accompanying.invoice.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']//group" position="after">
                <field name="invoice_mode" invisible="1"/>
                <group name="sale_shipping" attrs="{'invisible': [('invoice_mode', '!=', 'accompanying')]}">
                    <label for="goods_description_id" string="Goods Description"/>
                    <div class="o_row">
                        <field name="goods_description_id"/>
                    </div>
                    <label for="transportation_reason_id" string="Transportation Reason"/>
                    <div class="o_row">
                        <field name="transportation_reason_id"/>
                    </div>
                    <label for="transportation_method_id" string="Transportation Method"/>
                    <div class="o_row">
                        <field name="transportation_method_id"/>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</odoo>