<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="CashRegisterInit">
        <div>

            <div class="m-auto">
                <div class="cash-desk d-flex flex-wrap"/>
            </div>

            <!-- cash bill -->
            <div class="mt-5 mb-5">
                <div id="register"/>
            </div>

            <!-- printer -->
            <div class="cash_printer d-none">
                <div class="printer d-flex flex-column align-items-center">
                  <div class="cash_register rounded-pill"/>
                  <div class="receipt-taken">
                    <div class="receipt p-3 rounded"/>
                  </div>
                </div>
            </div>

            <!-- control -->
            <div class="control-panel pr-5 pb-1 d-flex flex-row-reverse">
                <button type="button" data-role="print-bill" class="btn btn-primary">
                    <i class="fa fa-print"/> Print
                </button>
                <button type="button" data-role="retry-print" class="btn btn-primary d-none">
                    <i class="fa fa-refresh"></i> Retry
                </button>
            </div>

        </div>
    </t>

    <t t-name="cashRegisterError">
        <span class="text-danger">
            <i class="fa fa-times"/> <t t-esc="message"/><br/>
        </span>
    </t>

    <t t-name="cashRegisterWarning">
        <span class="text-warning">
            <i class="fa fa-exclamation-triangle"/> <t t-esc="message"/><br/>
        </span>
    </t>

    <t t-name="cashRegisterInfo">
        <span class="text-info">
            <i class="fa fa-info"/> <t t-esc="message"/><br/>
        </span>
    </t>

    <t t-name="cashRegisterSuccess">
        <span class="text-success">
            <i class="fa fa-check"/> <t t-esc="message"/><br/>
        </span>
    </t>

    <t t-name="cashRegisterDesk">
        <div t-foreach="cashes" t-as="cash"
             t-attf-class="cash-register d-flex flex-column align-items-center p-2 mr-1
             #{(active_user == cash_value.user[0]) ? 'active':''}
             #{!cash_value.device_status ? 'offline': ''}"
             t-att-data-cash-id="cash"
             t-att-data-device-identifier="cash_value.device_identifier"
             t-att-data-cash-connected="cash_value.device_status"
             t-att-data-current-user="cash_value.user[1]"
             t-att-data-device-ip="cash_value.ip"
             t-att-data-iot-ip="cash_value.iot_ip">
            <div>
                <t t-if="cash_value.device_status">
                    <i class="fa fa-print fa-2x"></i>
                </t>
                <t t-else="">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-print fa-stack-1x"></i>
                        <i class="fa fa-ban fa-stack-2x text-danger"></i>
                    </span>
                </t>
            </div>
            <div>
                <span class="font-weight-bold">
                    <span t-esc="cash_value.name"/>
                </span>
            </div>
            <div class="cash-user">
                <t t-if="cash_value.user[1]">
                    (<t t-esc="cash_value.user[1]"/>)
                </t>
                <t t-else="">
                    (Available)
                </t>
            </div>
        </div>
    </t>

</templates>