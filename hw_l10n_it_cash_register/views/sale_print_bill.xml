<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='sale_print_bill'>
        <field name='name'>sale.print.bill.form</field>
        <field name='model'>sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="print_bill" type="object" class="oe_stat_button" icon="fa-print icon"
                        attrs="{'invisible': [('state', '!=', 'sale')]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Print</span>
                        <span class="o_stat_text">Bill</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="before">
                <field name="receipt_number"/>
            </xpath>
        </field>
    </record>

</odoo>