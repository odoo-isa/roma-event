<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="account_tax_group_vpa" model="account.tax.group">
            <field name="name">22vPA</field>
        </record>

        <record id="account_tax_vpa" model="account.tax">
            <field name="name">Iva al 22% PA (debito)</field>
            <field name="amount_type">percent</field>
            <field name="amount">22</field>
            <field name="description">22vPA</field>
            <field name="tax_group_id" eval="ref('l10n_it_split_payment.account_tax_group_vpa')"/>
            <field name="type_tax_use">sale</field>
            <field name="l10n_it_vat_due_date">S</field>
            <field name="invoice_repartition_line_ids" eval="[(5, 0, 0),(0,0,{'factor_percent': 100,'repartition_type': 'base'}),(0,0,{'factor_percent': 100,'repartition_type': 'tax'}),]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),(0,0,{'factor_percent': 100,'repartition_type': 'base'}),(0,0,{'factor_percent': 100,'repartition_type': 'tax'}),]"/>
        </record>

        <record id="account_fiscal_split_test" model="account.fiscal.position">
            <field name="name">Scissione dei Pagamenti</field>
            <field name="split_payment">True</field>
        </record>

    </data>

</odoo>