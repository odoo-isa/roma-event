<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORM View -->
        <record model='ir.ui.view' id='sale_order_readonly_route'>
            <field name='name'>sale.order.readonly.route.form</field>
            <field name='model'>sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="groups_id" eval="[(4, ref('stock.group_adv_location'))]"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='order_line']/tree/field[@name='route_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('state','in', ('sale', 'done', 'cancel'))]}</attribute>
                </xpath>
            </field>
        </record>

        <record model='ir.ui.view' id='view_order_form_cancelled_button'>
            <field name='name'>view.order.form.cancelled.button</field>
            <field name='model'>sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="display_cancelled_route_widget" invisible="1"/>
                    <widget name="cancelled_route" width="0.1"/>
                </xpath>
            </field>
        </record>

        <record model='ir.ui.view' id='sale_order_free_qty_form'>
            <field name='name'>sale.order.free_qty.form</field>
            <field name='model'>sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='order_line']/form//div[@name='ordered_qty']" position="inside">
                    / <field name="free_qty_today" class="oe_no_button"/> Available
                </xpath>
                <xpath expr="//field[@name='order_line']/kanban/field[@name='display_type']" position="after">
                    <field name="free_qty_today"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/kanban/templates//t[@t-esc='record.product_uom.value']" position="after">
                    / <t t-esc="record.free_qty_today.value"/> Available
                    <i class="fa fa-circle text-danger" t-if="record.free_qty_today.raw_value = '0'"/>
                </xpath>
            </field>
        </record>

        <record model='ir.ui.view' id='sale_order_free_qty_widget_form'>
            <field name='name'>sale.order.free_qty.widget.form</field>
            <field name='model'>sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock_qty"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='free_qty_today']" position="attributes">
                    <attribute name="invisible">0</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>