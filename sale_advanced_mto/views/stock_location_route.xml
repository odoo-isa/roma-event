<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='stock_location_route_default'>
            <field name='name'>stock.location.route.default.form</field>
            <field name='model'>stock.location.route</field>
            <field name="inherit_id" ref="sale_stock.stock_location_route_view_form_inherit_sale_stock"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='sale_selectable']" position="after">
                    <field name="is_sale_mto_routing" invisible="1"/>
                    <field name="is_default_route" attrs="{'invisible': [('is_sale_mto_routing', '=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>