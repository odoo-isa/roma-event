<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='account_move_analytic_account_domain'>
        <field name='name'>account.move.analytic.account.domain.form</field>
        <field name='model'>account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(4,ref('analytic.group_analytic_accounting'))]"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="after">
                <field name="related_mandatory_analytic" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='analytic_account_id']" position="attributes">
                <attribute name="attrs">
                    {
                        'required': [
                            ('related_mandatory_analytic', '=', True),
                            ('display_type', 'not in', ('line_section', 'line_note'))
                        ]
                    }
                </attribute>
                <attribute name="context">
                    {
                        'related_mandatory_analytic': related_mandatory_analytic,
                        'account_id': account_id
                    }
                </attribute>
                <attribute name="options">
                    {
                        'no_create_edit': True
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']/form//group" position="after">
                <group string="Analytic Lines">
                    <field name="parent_state" invisible="1"/>
                    <field name="analytic_line_ids" readonly="0" context="{'invoice_state': parent_state}"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_account_id']"
                   position="attributes"
            >
                <attribute name="attrs">
                    {
                        'readonly': [('analytic_tag_ids', '!=', [])]
                    }
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>