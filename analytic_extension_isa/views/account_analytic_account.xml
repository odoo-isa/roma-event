<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE View  -->
    <record model='ir.ui.view' id='account_analytic_account_for_account_tree'>
        <field name='name'>account.analytic.account.for.account.tree</field>
        <field name='model'>account.analytic.account</field>
        <field name='arch' type='xml'>
            <tree string='Account Analytic Account'>
                <field name="analytic_group_complete_name"/>
                <field name='name'/>
                <field name='code'/>
            </tree>
        </field>
    </record>

    <!-- SEARCH View  -->
    <record id="view_account_analytic_account_group_search" model="ir.ui.view">
        <field name="name">view.account.analytic.account.group.search</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='associatedpartner']" position="after">
                <filter string="Analytic group complete name" name="complete_name" domain="[]"
                        context="{'group_by': 'analytic_group_complete_name'}"/>
            </xpath>
        </field>
    </record>

</odoo>