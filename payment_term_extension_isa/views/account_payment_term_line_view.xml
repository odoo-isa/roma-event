<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherited View Account Payment Term Line Form -->
        <record id="view_payment_term_line_form" model="ir.ui.view">
            <field name="name">view.payment.term.line.form.inherit.payment.term.extension.isa</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='value']" position='after'>
                    <field name="payment_type_id" required="1"/>
                </xpath>
            </field>
        </record>

        <!-- Inherited View Account Payment Term Line Tree -->
        <record id="view_payment_term_line_tree" model="ir.ui.view">
            <field name="name">view.payment.term.line.tree.inherit.payment.term.extension.isa</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='day_of_the_month']" position='after'>
                    <field name="payment_type_id" required="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>