<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherited View Move Line Tree -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">view.move.line.tree.inherit.payment.term.extension.isa</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']//field[@name='tax_ids']" position='after'>
                    <field name="account_type" invisible="1"/>
                    <field name="payment_type_id"
                           attrs="{'readonly':[('account_type', 'not in', ['receivable', 'payable'])]}"
                    />
                </xpath>
            </field>
        </record>

    </data>
</odoo>