<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- FORM View  -->
    <record model='ir.ui.view' id='stock_picking_ddt_view_form'>
        <field name='name'>stock.picking.ddt.view.form</field>
        <field name='model'>stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='show_lots_text']" position="after">
                <field name="can_create_ddt" invisible="1"/>
                <button string="Create Ddt"
                    type="action"
                    name="%(l10n_it_ddt_stock_integration.create_ddt_stock_wizard_action)d"
                    class="oe_highlight"
                    attrs="{'invisible': [('can_create_ddt','=',False)]}">
                </button>
            </xpath>
            <xpath expr="//div[@name='button_box']/button[@name='action_picking_move_tree']" position="after">
                <field name="ddt_ids" invisible="1"/>
                <field name="invoice_ids" invisible="1"/>
                <button name="action_view_invoice" type="object" class="oe_stat_button"  icon="fa-pencil-square-o"
                    attrs="{'invisible': [('invoice_ids', '=', [])]}">
                    <field name="invoice_count" widget="statinfo" string="Invoice"/>
                </button>
                <button name="action_view_ddt" type="object" class="oe_stat_button"  icon="fa-file-text"
                    attrs="{'invisible': [('ddt_ids', '=', [])]}">
                    <field name="ddt_count" widget="statinfo" string="DdT"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>