<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="account_tax_group_preferential_tax_4" model="account.tax.group">
            <field name="name">IVA agevolata 4%</field>
        </record>

        <record id="account_tax_group_preferential_tax_10" model="account.tax.group">
            <field name="name">IVA agevolata 10%</field>
        </record>

        <record id="account_tax_group_preferential_tax_0" model="account.tax.group">
            <field name="name">IVA agevolata 0%</field>
        </record>

        <record id="account_tax_4" model="account.tax">
            <field name="amount">4</field>
            <field name="amount_type">percent</field>
            <field name="name">Iva agevolata 4%</field>
            <field name="tax_group_id" eval="ref('account_tax_group_preferential_tax_4')"/>
            <field name="type_tax_use">sale</field>
            <field name="sequence">10</field>
        </record>

        <record id="account_tax_10" model="account.tax">
            <field name="amount">10</field>
            <field name="amount_type">percent</field>
            <field name="name">Iva agevolata 10%</field>
            <field name="tax_group_id" eval="ref('account_tax_group_preferential_tax_10')"/>
            <field name="type_tax_use">sale</field>
            <field name="sequence">20</field>
        </record>

        <record id="account_tax_0" model="account.tax">
            <field name="amount">0</field>
            <field name="amount_type">percent</field>
            <field name="name">Iva agevolata 0%</field>
            <field name="tax_group_id" eval="ref('account_tax_group_preferential_tax_0')"/>
            <field name="type_tax_use">sale</field>
            <field name="sequence">30</field>
        </record>

        <record id="A" model="account.preferential.tax.type">
            <field name="name">Costruzione nuovi fabbricati non di lusso, costruzioni rurali nei limiti (4%)</field>
            <field name="tax_id" eval="ref('account_tax_4')"/>
        </record>

        <record id="B" model="account.preferential.tax.type">
            <field name="name">Costruzione di fabbricati seconda casa privati (art.13 L.02/07/49 N.148) (4%)</field>
            <field name="tax_id" eval="ref('account_tax_4')"/>
        </record>

        <record id="C" model="account.preferential.tax.type">
            <field name="name">Interventi di recupero (art.31 lett.C,D,E,L N.457/78, risanamenti conservativi, ristrutturazioni edili, restauro abitazioni civili, urbanizzazione prima o seconda casa (10%)</field>
            <field name="tax_id" eval="ref('account_tax_10')"/>
        </record>

        <record id="D" model="account.preferential.tax.type">
            <field name="name">Opere urbanistiche primarie e secondarie (nuove costruzioni di fogne, rete idrica, Comuni, Chiese, impianti sportivi, ecc.) (10%)</field>
            <field name="tax_id" eval="ref('account_tax_10')"/>
        </record>

        <record id="E" model="account.preferential.tax.type">
            <field name="name">Eventuale impianto ricompreso nell'art.127 quinquies tab.A parte III (Nuove construzioni scuole, caserme, ospedali, centri anziani, ecc) (10%)</field>
            <field name="tax_id" eval="ref('account_tax_10')"/>
        </record>

        <record id="F" model="account.preferential.tax.type">
            <field name="name">Impianto solare completo per la produzione di calore (10%)</field>
            <field name="tax_id" eval="ref('account_tax_10')"/>
        </record>

        <record id="G" model="account.preferential.tax.type">
            <field name="name">Fornitura di ausili e protesi per disabili come previsto dal punto 41-quater tab.A parte II DPR 633/1972 (0%)</field>
            <field name="tax_id" eval="ref('account_tax_0')"/>
        </record>

    </data>
</odoo>