<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_product_template_subsidized_vat_form'>
            <field name='name'>view.product.template.subsidized.vat.form</field>
            <field name='model'>product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name='arch' type='xml'>
                <xpath expr="//group[@name='properties']" position="inside">
                    <group string="Taxes" name="taxes">
                        <field name="preferential_tax_na"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>