<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM View  -->
        <record model='ir.ui.view' id='view_res_partner_vat_quote_form'>
            <field name='name'>view.res.partner.vat.quote.form</field>
            <field name='model'>res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="vat_quote_page" string="Preferential taxes" attrs="{'invisible': [('type', '!=', 'delivery')]}">
                        <field name="account_preferential_taxes_ids"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>