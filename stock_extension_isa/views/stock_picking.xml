<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='stock_view_picking_move_quantity_info_form'>
        <field name='name'>stock.view.picking.move.quantity.info.form</field>
        <field name='model'>stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='move_ids_without_package']/form//field[@name='description_picking']" position="after">
                <field name="stock_quantity_sale_info" attrs="{'invisible': [('stock_quantity_sale_info', '=', [])]}"/>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree//field[@name='product_id']" position="after">
                <field string="Sale Quantity Owner" name="stock_quantity_sale_info_tree"/>
            </xpath>
        </field>
    </record>
</odoo>