<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form view -->
        <record id="view_product_supplier_inherit_purchase_pricelist" model="ir.ui.view">
            <field name="name">template.supplier.form.inherit.purchase.pricelist</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seller_ids']" position="after">
                    <group>
                        <field name="default_supplier_id"
                               options="{'no_create':True}"
                        />
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>