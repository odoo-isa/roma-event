<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view.move.form.inherit.l10n.it.account.tax.report</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="original_move_id" attrs="{'invisible': [('original_move_id', '=', False)]}"/>
                <field name="delegated_move_id" attrs="{'invisible': [('delegated_move_id', '=', False)]}"/>
            </xpath>
            <!-- Aggiungo il readonly per i campi nel caso si trattasse di Registrazione Delegata -->
            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="attrs">{'readonly': [('original_move_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date']" position="attributes">
                <attribute name="attrs">
                    {'readonly': ['|', ('state', 'not in', ['draft']), ('original_move_id', '!=', False)],
                    'invisible': [('type', 'in', ['out_invoice', 'out_refund', 'out_receipt'])]
                    }
                </attribute>
            </xpath>
            <xpath expr="//field[@name='auto_post']" position="attributes">
                <attribute name="attrs">{'readonly': [('original_move_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='to_check']" position="attributes">
                <attribute name="attrs">{'readonly': [('original_move_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="attrs">
                    {'readonly': ['|', ('state', 'not in', ['draft']), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
            <!-- Nascondo bottone "Duplica" e "Reimposta a Bozza" per Registrazioni Figlie" -->
            <xpath expr="//button[@name='action_duplicate']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', ('type', '!=', 'entry'), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', '|', ('restrict_mode_hash_table', '=', True), ('state', 'not in', ('posted', 'cancel')), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', '|', ('id', '=', False), ('state', '!=', 'draft'), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
            <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', '|', ('type', '!=', 'entry'), ('state', '!=', 'posted'), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
            <xpath expr="//button[@name='action_post']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|', ('state', '!=', 'draft'), ('original_move_id', '!=', False)]}
                </attribute>
            </xpath>
        </field>
    </record>

</odoo>